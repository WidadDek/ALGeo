    <!-- debut -->
    <Grid Background="#FF125065" x:Name="ExoGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="237*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="231*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="172*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="170*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>


        <!--<Image x:Name="image"  Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom"   Width="155" Source="Images/Earth.png" Stretch="UniformToFill" Grid.RowSpan="2" Margin="315.357,0,315.357,-20"/>-->
        <Canvas Name="canvas" Grid.ColumnSpan="5" Grid.Column="1" Margin="10,0,0,0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>

            <RichTextBox x:Name="QuestionRtb"    Style="{DynamicResource StyleRTBVF}" Background="#FFF1C20F"  BorderBrush="#FF455799"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" RenderTransformOrigin="0.5,0.5" Canvas.Top="28.092" Canvas.Left="20.195" Width="682.568" Height="112.908">
                <FlowDocument>
                    <Paragraph TextAlignment="Center">
                        <LineBreak/>
                        <Span Name="Question"></Span>

                    </Paragraph>

                </FlowDocument>
            </RichTextBox>
            <Image x:Name="image" Stretch="UniformToFill" Grid.RowSpan="2" Grid.Column="1" HorizontalAlignment="Left" Width="143" Height="123" Canvas.Left="37.528" Canvas.Top="-14.308" />

        </Canvas>
        <Button x:Name="Ok" Content="تاكيد الاجابة"   Style="{DynamicResource StyleBtnVF}" Background="Gold"  Click="Ok_Click"  Grid.Column="4" Grid.Row="3" Margin="-63.9,43.334,-74.73,10" Height="Auto" Width="Auto" d:LayoutOverrides="LeftMargin, RightMargin" Visibility="Hidden" />
        <Button x:Name="Next" Content="السؤال التالي"   Style="{DynamicResource StyleBtnVF}" Background="Gold"  Click="Next_Click"  Grid.Column="2" Grid.Row="3"  Width="Auto" Margin="-82.467,43.334,-84.828,10" Height="Auto" d:LayoutOverrides="LeftMargin, RightMargin" Visibility="Hidden"/>
        <ProgressBar x:Name="ScorePB" Style="{DynamicResource StyleProgressBarVF}" Maximum="120" Width="Auto" Background="White" Foreground="#FF04F03D" Grid.Row="0" Visibility="Hidden" Margin="-85,0,109,75" Grid.ColumnSpan="4" Height="0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="ScoreShowTB" Style="{DynamicResource StyleTBlkVF}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Column="4" Width="Auto" Margin="-12.368,10,77.062,0" Height="59.538" Grid.ColumnSpan="2" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>

        <TextBlock Name="ScoreTB" Style="{DynamicResource StyleTBlkVF}" Height="Auto"  Width="Auto"  HorizontalAlignment="Stretch" Margin="4,10,10,57.684" d:LayoutOverrides="HorizontalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Column="6" VerticalAlignment="Stretch"/>
        <Frame x:Name="StartFrame" Grid.ColumnSpan="7" Grid.Row="0"  Grid.RowSpan="4" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
        <Image x:Name="ImageChoix3" Grid.Column="1" Grid.Row="2" MouseDown="ImageChoix3_MouseDown" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="ImageChoix1" Grid.Column="5" Grid.Row="2" MouseDown="ImageChoix1_MouseDown" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="ImageChoix2" Grid.Column="3" Grid.Row="2" MouseDown="ImageChoix2_MouseDown" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" RenderTransformOrigin="0.5,0.5">

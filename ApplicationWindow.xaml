<Window x:Class="AlGeo.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlGeo"
        mc:Ignorable="d" Name="mainWindow"
        Title="ApplicationWindow" Height="650" Width="1100" Background="#FF1ABC9C" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid x:Name="MainWindowGrid" Width="1100">
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        <Button x:Name="Exit" Content="Button" HorizontalAlignment="Right" Height="40" Style="{DynamicResource ExitButtonStyle}" VerticalAlignment="Top" Width="50" Click="Exit_Click" RenderTransformOrigin="0.26,0.55" Margin="0,10,10,0" Grid.Column="2" ToolTip="الخروج"/>




    </Grid>
</Window>
